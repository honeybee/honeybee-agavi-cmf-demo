<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    xmlns="http://berlinonline.de/schemas/honeybee/config/services/1.0"
    xmlns:env="http://berlinonline.de/schemas/honeybee/config/envelope/definition/1.0"
    xmlns:xi="http://www.w3.org/2001/XInclude"
>

    <xi:include href="./includes/services.xml"
        xpointer="xmlns(ae=http://agavi.org/agavi/config/global/envelope/1.0) xpointer(/ae:configurations/*)">
        <xi:fallback />
    </xi:include>

    <xi:include href="%core.honeybee_config_dir%/services.xml"
        xpointer="xmlns(ae=http://agavi.org/agavi/config/global/envelope/1.0) xpointer(/ae:configurations/*)">
        <xi:fallback />
    </xi:include>

    <ae:configuration context="console">
        <service_map>
            <service_definitions>
                <service name="honeybee.infrastructure.auth_service">
                    <class>Honeybee\Infrastructure\Security\Auth\ConsoleAuthService</class>
                    <settings>
                        <setting name="role_map">
                            <settings>
                                <setting name="deploy">administrator</setting>
                            </settings>
                        </setting>
                    </settings>
                </service>
            </service_definitions>
        </service_map>
    </ae:configuration>
</ae:configurations>
