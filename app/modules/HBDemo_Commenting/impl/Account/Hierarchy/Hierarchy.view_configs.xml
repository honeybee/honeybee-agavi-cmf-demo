<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://berlinonline.de/schemas/honeybee/config/view_configs/1.0"
    xmlns:env="http://berlinonline.de/schemas/honeybee/config/envelope/definition/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    xmlns:xi="http://www.w3.org/2001/XInclude"
>
    <ae:configuration>
        <view_configs>
            <view_config scope="hbdemo.commenting.account.hierarchy">
                <output_formats>
                    <output_format name="html">
                        <renderer_configs>
                            <renderer_config subject="hierarchy">
                                <settings>
                                    <setting name="view_template_name">hbdemo.commenting.account.hierarchy</setting>
                                </settings>
                            </renderer_config>
                            <renderer_config subject="hierarchy_parent">
                                <settings>
                                    <setting name="view_template_name">hbdemo.commenting.account.hierarchy_parent</setting>
                                    <setting name="template">html/resource/as_fields.twig</setting>
                                </settings>
                            </renderer_config>
                            <renderer_config subject="hbdemo.commenting.account">
                                <settings>
                                    <setting name="template">html/resource/as_nodelist_item.twig</setting>
                                </settings>
                            </renderer_config>
                            <renderer_config subject="hbdemo.commenting.account.inactive.activity_map">
                               <settings>
                                    <setting name="default_activity_name">hierarchy</setting>
                                    <setting name="hidden_activity_names">
                                        <setting>delete</setting>
                                    </setting>
                                </settings>
                            </renderer_config>
                            <renderer_config subject="hbdemo.commenting.account.active.activity_map">
                                <settings>
                                    <setting name="default_activity_name">hierarchy</setting>
                                    <setting name="hidden_activity_names">
                                        <setting>delete</setting>
                                    </setting>
                                </settings>
                            </renderer_config>
                            <renderer_config subject="sort_activities">
                                <settings>
                                    <setting name="as_dropdown">true</setting>
                                </settings>
                            </renderer_config>
                            <renderer_config subject="primary_activities">
                                <settings>
                                    <setting name="default_activity_name">create_resource</setting>
                                    <setting name="as_list">true</setting>
                                </settings>
                            </renderer_config>
                            <renderer_config subject="search_activity">
                                <settings>
                                    <setting name="template">html/activity/search_form.twig</setting>
                                    <setting name="form_id">search_form</setting>
                                </settings>
                            </renderer_config>
                        </renderer_configs>
                    </output_format>
                    <output_format name="console">
                        <renderer_configs>
                            <renderer_config subject="hierarchy">
                                <settings>
                                    <!-- <setting name="view_template_name">hbdemo.commenting.account.hierarchy</setting> -->
                                </settings>
                            </renderer_config>
                        </renderer_configs>
                    </output_format>
                </output_formats>
            </view_config>
        </view_configs>
    </ae:configuration>
</ae:configurations>
