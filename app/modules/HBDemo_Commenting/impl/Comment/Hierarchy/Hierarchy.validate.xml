<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    parent="%core.module_dir%/HBDemo_Commenting/config/validators.xml"
    xmlns:xi="http://www.w3.org/2001/XInclude"
>
    <ae:configuration context="web">
        <validators translation_domain="hbdemo.commenting.comment.errors">
            <validator class="Honeybee\FrameworkBinding\Agavi\Validator\ListConfigValidator" name="invalid_list_config" required="true" method="read">
                <ae:parameter name="default_limit">50</ae:parameter>
            </validator>

            <validator class="Honeybee\FrameworkBinding\Agavi\Validator\ResourceValidator" name="invalid_node" required="false" method="read">
                <argument>resource</argument>
                <error>The given parent-node-id(comment identifier) is invalid.</error>
                <ae:parameter name="resource_type">hbdemo.commenting.comment</ae:parameter>
                <ae:parameter name="export">parent_node</ae:parameter>
            </validator>

            <validator class="Honeybee\FrameworkBinding\Agavi\Validator\MoveAggregateRootNodeCommandValidator" name="invalid_task_data" method="write">
                <argument>aggregate_root_identifier</argument>
                <ae:parameter name="aggregate_root_type">hbdemo.commenting.comment</ae:parameter>
                <ae:parameter name="identifier_arg">aggregate_root_identifier</ae:parameter>
                <ae:parameter name="command_implementor">HBDemo\Commenting\Model\Comment\Task\MoveCommentNode\MoveCommentNodeCommand</ae:parameter>
                <ae:parameter name="attribute_whitelist">
                    <ae:parameter>parent_id</ae:parameter>
                </ae:parameter>
                <error>Invalid command payload given.</error>
                <error for="conflict_detected">Data has changed and conflicts with your attempt to modify it (same fields being changed).</error>
            </validator>
        </validators>
    </ae:configuration>
</ae:configurations>
